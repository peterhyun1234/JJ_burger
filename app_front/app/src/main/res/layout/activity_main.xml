<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#000000"/>

        <!-- 리니어 레이아웃을 수평 방향으로 설정 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bigmc" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="1. 쫩쫩버거"
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000원"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주문 수량:  "
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  1"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:layout_weight="1"/>

                </LinearLayout>
                <Button
                    android:id="@+id/add_jjap_btn"
                    android:theme="@style/AppTheme.BlueRipple"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#000000"
                    android:layout_margin="3dp"
                    android:textSize="12dp"
                    android:text="장바구니 추가" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/chicken" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="2. 치킨버거"
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4600원"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주문 수량:  "
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  1"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:layout_weight="1"/>

                </LinearLayout>
                <Button
                    android:id="@+id/add_chicken_btn"
                    android:theme="@style/AppTheme.BlueRipple"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#000000"
                    android:layout_margin="3dp"
                    android:textSize="12dp"
                    android:text="장바구니 추가" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            >
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cheese"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="3. 치즈버거"
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000원"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주문 수량:  "
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  1"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:layout_weight="1"/>

                </LinearLayout>
                <Button
                    android:id="@+id/add_cheese_btn"
                    android:theme="@style/AppTheme.BlueRipple"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#000000"
                    android:layout_margin="3dp"
                    android:textSize="12dp"
                    android:text="장바구니 추가" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#000000"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <!-- layout_weight를 1로 설정 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_edge"
                    android:text="장바구니"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_weight="1"/>

                <!-- layout_weight를 1로 설정 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>
                <!-- layout_weight를 1로 설정 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개수"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>

                <!-- layout_weight를 1로 설정 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <!-- layout_weight를 1로 설정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쫩쫩버거"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/jjapDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/jjapTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_weight="1"/>

        </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <!-- layout_weight를 1로 설정 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="치킨버거"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/chickenDegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/chickenTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <!-- layout_weight를 1로 설정 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="치즈버거"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/cheeseDegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/cheeseTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_weight="1"/>

            </TableRow>
        </TableLayout>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="총 결제 금액:"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/total_money_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0원"
                android:background="@drawable/edge"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cancel_btn"
                android:theme="@style/AppTheme.BlueRipple"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="3dp"
                android:textSize="15dp"
                android:text="취소" />

            <Button
                android:id="@+id/payment_btn"
                android:theme="@style/AppTheme.BlueRipple"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="3dp"
                android:textSize="15dp"
                android:text="결제" />
\
    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>